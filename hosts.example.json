{
  "log_level": "INFO",
  "audit_log_file": null,

  "hosts": [
    {
      "name": "runpod",
      "hostname": "YOUR_RUNPOD_IP",
      "port": 22,
      "username": "root",
      "identity_file": "~/.ssh/id_rsa",
      "auto_accept_host_key": true,
      "command_timeout": 60,
      "transfer_timeout": 300
    },
    {
      "name": "production",
      "hostname": "prod.example.com",
      "port": 22,
      "username": "deploy",
      "identity_file": "~/.ssh/id_ed25519",
      "auto_accept_host_key": false,
      "command_timeout": 30,
      "transfer_timeout": 120,
      "allowed_commands": ["ls", "cat", "df", "free", "nvidia-smi", "docker", "systemctl"]
    }
  ]
}
